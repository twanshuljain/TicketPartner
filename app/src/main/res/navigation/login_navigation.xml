<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_navigation"
    app:startDestination="@id/splashLandingFragment">

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.ticketpartner.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
        <action
            android:id="@+id/action_signInFragment_to_signUpEmailFragment"
            app:destination="@id/signUpEmailFragment" />
    </fragment>

    <fragment
        android:id="@+id/signUpEmailFragment"
        android:name="com.example.ticketpartner.SignUpEmailFragment"
        android:label="fragment_sign_up_email"
        tools:layout="@layout/fragment_sign_up_email" >
        <action
            android:id="@+id/action_signUpEmailFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_signUpEmailFragment_to_signUpDetailsFragment"
            app:destination="@id/signUpDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/signUpDetailsFragment"
        android:name="com.example.ticketpartner.SignUpDetailsFragment"
        android:label="fragment_sign_up_details"
        tools:layout="@layout/fragment_sign_up_details" >
        <action
            android:id="@+id/action_signUpDetailsFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>

    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.ticketpartner.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" />

    <fragment
        android:id="@+id/splashLandingFragment"
        android:name="com.example.ticketpartner.SplashLandingFragment"
        android:label="fragment_splash_landing"
        tools:layout="@layout/fragment_splash_landing" >
        <action
            android:id="@+id/action_splashLandingFragment_to_signUpEmailFragment"
            app:destination="@id/signUpEmailFragment" />
        <action
            android:id="@+id/action_splashLandingFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>

</navigation>
  <style name="OtpEditTextStyle">
    <!-- Set the width and height of the EditText -->
    <item name="android:layout_width">@dimen/size_48</item>
    <item name="android:layout_height">@dimen/size_48</item>

    <!-- Set text appearance -->
    <item name="android:textSize">@dimen/text_16</item>
    <item name="android:textColor">@color/input_number_black</item>

    <!-- Set input type to number -->
    <item name="android:inputType">number</item>

    <!-- Center the text horizontally and vertically -->
    <item name="android:gravity">center</item>

    <!-- Set padding to provide some spacing -->
    <item name="android:padding">8dp</item>
  </style>


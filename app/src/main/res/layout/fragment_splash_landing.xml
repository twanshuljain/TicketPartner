<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".feature_login.presentation.SplashLandingFragment">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="15dp"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_end="@dimen/margin_15" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivProjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_15"
            android:src="@drawable/ic_project_name_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/margin_30"
            android:src="@drawable/splash_banner_image"
            app:layout_constraintTop_toTopOf="@id/ivProjectName"
            app:layout_constraintBottom_toBottomOf="@id/tvWelcomeToEvent"
            app:layout_constraintTop_toBottomOf="@id/ivProjectName" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvWelcomeToEvent"
            style="@style/regularParaText14"
            android:layout_width="@dimen/margin_0"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/welcome_to_event_com"
            android:layout_marginBottom="@dimen/margin_10"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintBottom_toTopOf="@id/tvElevateYourEvents" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvElevateYourEvents"
            style="@style/BoldParaHeadingText14"
            android:layout_width="@dimen/margin_0"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_20"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintBottom_toTopOf="@id/tvLoremIpsumDolor" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLoremIpsumDolor"
            style="@style/regularParaText16"
            android:layout_width="@dimen/margin_0"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_25"
            android:gravity="center_horizontal"
            android:text="@string/lorem_ipsum_dolor"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintBottom_toTopOf="@id/btnNext" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNext"
            style="@style/boldWhiteText16"
            android:layout_width="@dimen/margin_0"
            android:layout_height="@dimen/size_48"
            android:layout_marginTop="@dimen/margin_25"
            android:layout_marginBottom="@dimen/margin_25"
            android:background="@drawable/btn_design_sign_in"
            android:text="@string/next"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guidelineStart" />

    </androidx.constraintlayout.widget.ConstraintLayout>

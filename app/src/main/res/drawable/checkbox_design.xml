<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_checked="true">
            <shape android:shape="rectangle">
                <solid android:color="@color/white" /> <!-- Background color when checked -->
                <corners android:radius="8dp" /> <!-- Radius for rounded corners -->
                <stroke android:color="@color/check_box" android:width="1dp" /> <!-- Border color and width -->
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle">
                <solid android:color="@color/white" /> <!-- Background color when unchecked -->
                <corners android:radius="8dp" /> <!-- Radius for rounded corners -->
                <stroke android:color="@color/check_box" android:width="1dp" /> <!-- Border color and width -->
            </shape>
        </item>
    </selector>
